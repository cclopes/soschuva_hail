publisher = {Elsevier B.V.},
title = {{Examination of CCN impacts on hail in a simulated supercell storm with triple-moment hail bulk microphysics}},
url = {http://dx.doi.org/10.1016/j.atmosres.2014.04.017 http://linkinghub.elsevier.com/retrieve/pii/S0169809514001999},
volume = {147-148},
year = {2014}
