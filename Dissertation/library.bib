publisher = {Elsevier B.V.},
title = {{A triple-moment hail bulk microphysics scheme. Part I: Description and initial evaluation}},
url = {http://dx.doi.org/10.1016/j.atmosres.2014.07.016 http://linkinghub.elsevier.com/retrieve/pii/S0169809514002142},
volume = {149},
