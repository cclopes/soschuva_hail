journal = {Bulletin of the American Meteorological Society},
month = {feb},
number = {2},
pages = {191--216},
title = {{Mesoscale and Radar Observations of the Fort Collins Flash Flood of 28 July 1997}},
url = {http://journals.ametsoc.org/doi/abs/10.1175/1520-0477%281999%29080%3C0191%3AMAROOT%3E2.0.CO%3B2},
